{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    // "showOutput": "always",
    "tasks": [
        {
            "label": "compile",
            "type": "process",
            "command": "g++",
            // "isShellCommand": true,
            "args": ["${file}", "-o", "${workspaceRoot}/bin/${fileBasenameNoExtension}.out", "-g"],
            // "args": ["${file"],
            
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}